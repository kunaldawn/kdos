# description	: X.org Type1 fonts
# depends	: util-macros mkfontscale font-util

name=font-ibm-type1
version=1.0.4
release=1
source="http://ftp.x.org/pub/individual/font/font-ibm-type1-$version.tar.xz"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
	make DESTDIR=$PKG install
}

