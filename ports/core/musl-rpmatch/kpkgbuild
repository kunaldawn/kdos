# description	: Implementation of rpmatch(3) for musl libc
# url		: https://github.com/pullmoll/musl-rpmatch

name=musl-rpmatch
version=1.0
release=1
source="https://github.com/pullmoll/musl-rpmatch/archive/v$version.tar.gz"

build() {
	cd $name-$version
	autoreconf -fi
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
