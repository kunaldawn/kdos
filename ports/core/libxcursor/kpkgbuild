# description	: X cursor management library
# depends	: libxrender libxfixes libx11 

name=libxcursor
version=1.2.3
release=1
source="$name-$version.tar.xz::http://ftp.x.org/pub/individual/lib/libXcursor-$version.tar.xz"

build() {
	./configure \
		--prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var
	make
	make DESTDIR=$PKG install
}
