# description	: tmux - Terminal multiplexer
# depends	: libevent ncurses

name=tmux
version=3.6a
release=1
source="https://github.com/tmux/tmux/releases/download/${version}/${name}-${version}.tar.gz"

build() {
	./configure --prefix=/usr 
	make
	make DESTDIR=$PKG install
}
