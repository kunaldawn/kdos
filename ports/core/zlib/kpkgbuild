# description: Compression library implementing the deflate compression method

name=zlib
version=1.3.1
release=1
source="https://zlib.net/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
