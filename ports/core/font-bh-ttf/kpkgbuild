# description	: X.org Luxi Truetype fonts
# depends	: util-macros mkfontscale font-util

name=font-bh-ttf
version=1.0.4
release=1
source="http://ftp.x.org/pub/individual/font/font-bh-ttf-$version.tar.xz"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
	make DESTDIR=$PKG install
}

