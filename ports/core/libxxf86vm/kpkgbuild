# description	: X11 XFree86 video mode extension library
# depends	: libx11 libxext 

name=libxxf86vm
version=1.1.6
release=1
source="$name-$version.tar.xz::http://ftp.x.org/pub/individual/lib/libXxf86vm-$version.tar.xz"

build() {
	./configure \
		--prefix=/usr \
        --sysconfdir=/etc \
        --localstatedir=/var
	make
	make DESTDIR=$PKG install
}

