# description: GNU utilities to locate files

name=findutils
version=4.10.0
release=1
source="https://mirrors.ocf.berkeley.edu/gnu/$name/$name-$version.tar.xz"

build() {
	./configure --prefix=/usr \
	            --localstatedir=/var/lib/locate
	make
	make DESTDIR=$PKG install
}
