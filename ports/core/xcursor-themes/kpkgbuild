# description	: Redglass and whiteglass animated cursor themes
# depends	: xcursorgen

name=xcursor-themes
version=1.0.7
release=1
source="http://ftp.x.org/pub/individual/data/xcursor-themes-$version.tar.xz"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
	make DESTDIR=$PKG install
}
