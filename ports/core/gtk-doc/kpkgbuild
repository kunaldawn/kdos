# description	: API documentation generator for GTK+ and GNOME
# depends	: glib python3 meson ninja python3-pygments itstool

name=gtk-doc
version=1.35.1
_version=${version%.*}
release=1
source="https://download.gnome.org/sources/gtk-doc/$_version/gtk-doc-$version.tar.xz"

build() {
	meson setup build \
		--prefix=/usr \
		--sysconfdir=/etc \
		--buildtype=release \
        -Dtests=false
	ninja -C build
	DESTDIR=$PKG ninja -C build install
}
