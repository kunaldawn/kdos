# description: Library for creating and manipulating ISO 9660 filesystem images
# depends: zlib

name=libisofs
version=1.5.6
release=1
source="http://files.libburnia-project.org/releases/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure --prefix=/usr \
	            --disable-static
	make
	make DESTDIR=$PKG install
}
