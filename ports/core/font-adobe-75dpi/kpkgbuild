# description	: X.org 75dpi fonts
# depends	: util-macros mkfontscale font-util bdftopcf

name=font-adobe-75dpi
version=1.0.4
release=1
source="https://www.x.org/archive/individual/font/$name-$version.tar.xz"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
	make DESTDIR=$PKG install
}
