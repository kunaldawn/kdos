# description	: Create an X cursor file from PNG images
# depends	: libx11 libxcursor libpng zlib 

name=xcursorgen
version=1.0.9
release=1
source="http://ftp.x.org/pub/individual/app/xcursorgen-$version.tar.xz"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
	make DESTDIR=$PKG install
}
